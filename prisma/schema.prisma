generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Rank {
  NOOB
  SKID
  SICK
  WIZARD
  UNEMPLOYED
}

enum Language {
  C
  PYTHON
  JAVASCRIPT
  JAVA
  GO
  RUST
  X_86
  HOLY_C
  SHAKESPEARE
  BASH
  CHEF
}

enum Category {
  CODE_GOLF
  OBFUSCATION
  ESOLANG
  ONE_LINER
  FORBIDDEN_KEYWORDS
  POETIC_CODE
}

model User {
  id String @id @default(uuid())
  username String @unique
  password String
  salt String
  country String
  rank Rank @default(NOOB)
  submissionsCreated Int @default(0)
  challengesSolved Int @default(0)
  submissions CodeSubmission[] @relation("UserCreatesSubmissions")
  challenges Challenge[] @relation("UserCreatesChallenges")
  testcases Testcase[] @relation("UserCreatesTestcases")
  //Timestamps
  createdAt DateTime @default(now())
}

model CodeSubmission {
  id String @id @default(uuid())
  code String @db.Text 
  language Language
  createdBy String
  user User @relation("UserCreatesSubmissions", fields: [createdBy], references: [id])
  
  //Submission is for one challenge
  challengeId String
  challenge Challenge @relation("ChallengeHasSubmissions", fields: [challengeId], references: [id])

  //Timestamps
  createdAt DateTime @default(now())

}

model Challenge {
  id String @id @default(uuid())
  language Language
  description String @db.Text
  category Category

  //Challenge belongs to one user
  user User @relation("UserCreatesChallenges", fields: [createdBy], references: [id])
  createdBy String

  //Many submissions to one challenge
  submissions CodeSubmission[] @relation("ChallengeHasSubmissions")

  //Many testcases to one challenge
  testcases Testcase[] @relation("ChallengeHasTestcases")

  //Timestamps
  createdAt DateTime @default(now())

}

model Testcase {
   id String @id @default(uuid())
   input String @db.Text
   output String @db.Text

  createdBy String
  user User @relation("UserCreatesTestcases", fields: [createdBy], references: [id])

  challengeId String
  challenge Challenge @relation("ChallengeHasTestcases", fields: [challengeId], references: [id])

  //Timestamps
  createdAt DateTime @default(now())

}
